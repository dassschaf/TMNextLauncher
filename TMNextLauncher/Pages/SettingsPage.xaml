<Page
    x:Class="TMNextLauncher.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TMNextLauncher"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <NavigationView Name="SettingsNav" Content="Settingsnav" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Refresh" Content="Reload"/>
                <NavigationViewItem Icon="RotateCamera" Content="Graphics"/>
                <NavigationViewItem Icon="Switch" Content="Network"/>
                <NavigationViewItem Icon="OpenFile" Content="File Transfers"/>
            </NavigationView.MenuItems>
        </NavigationView>
    </Grid>
</Page>
