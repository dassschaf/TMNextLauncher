<Page x:Class="TMNextLauncherWpf.Pages.AppSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMNextLauncherWpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppSettingsPage">

    <Grid>
        <Label x:Name="SettingsPathLabel" Content="none set." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SettingsPathButton" Content="Update settings path" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="150" Click="SettingsPathButton_Click"/>
        <Label x:Name="GamePathLabel" Content="none set." HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top"/>
        <Button x:Name="GamePathButton" Content="Update game path" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="150" Click="GamePathButton_Click"/>


    </Grid>
</Page>
